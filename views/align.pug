include nav

.d-flex.justify-content-center.m-3(role='group')
  .form-floating
    select#select11.form-select.border-left
    label(for='select1') Species
  .form-floating.me-3
    select#select11.form-select.border-right
      option(value='2', selected) 2
      option(value='3') 3
      option(value='4') 4
      option(value='5') 5
    label(for='select1') Genes
  .form-floating
    select#select21.form-select.border-left
